<strong> Editing Book </strong>
<%= form_for(@post) do |f|%>
	<h4> Title </h4>
	<%= f.text_field :title %>
	<h4> Book </h4>
	<%= f.text_area :body %>
	<%= f.submit 'Update Book'%>

	<% end %>
	<%= link_to "Show" ,post_path(@post.id), class: "edit_#{@post.id}" %>
	|
	<%= link_to "Back" ,posts_path, class: "back" %>